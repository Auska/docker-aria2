#!/usr/bin/with-contenv bash

mkdir -p /webui /mnt

# copy

[[ ! -f /usr/bin/aria2c ]] && Jxf /defaults/aria2c.tar.xz -C /usr/bin/

[[ ! -f /webui/index.html ]] && unzip /defaults/ariang.zip -d /webui

[[ ! -f /config/aria2.conf ]] && cp /defaults/aria2.conf /config/aria2.conf

# permissions
chown abc:abc -R \
	/webui
	/mnt
