#!/usr/bin/with-contenv bash

mkdir -p /webui /mnt

# copy

if [[ ! -f /usr/bin/aria2c ]]; then
	tar Jxf /defaults/aria2c.tar.xz -C /usr/bin/
fi

if [[ ! -f /webui/index.html ]]; then
	unzip /defaults/ariang.zip -d /webui
fi

if [[ ! -f /config/aria2.conf ]]; then 
	cp /defaults/aria2.conf /config/aria2.conf
fi

# permissions
chown abc:abc -R \
	/webui
	/mnt
